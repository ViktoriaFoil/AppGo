<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Task1">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyAppGO.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.MyAppGO.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_task1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:text="@string/task1task"
        app:layout_anchor="@+id/appBarLayout2"
        app:layout_anchorGravity="bottom|center" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="170dp"
        app:layout_anchor="@+id/imageView2"
        app:layout_anchorGravity="center"
        app:srcCompat="@drawable/task1" />

    <Button
        android:id="@+id/buttontask12"
        android:layout_width="34dp"
        android:layout_height="27dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="355dp"
        android:background="@android:color/transparent"
        android:onClick="taskComplete"
        android:text="Button"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:onClick="onClick"
        android:text="На главную"
        app:icon="@drawable/abc_vector_test" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>